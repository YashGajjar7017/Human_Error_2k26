# Environment Variables Configuration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/your-database-name
DB_NAME=your-database-name

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
ACCESS_TOKEN_SECRET=your-access-token-secret
REFRESH_TOKEN_SECRET=your-refresh-token-secret
ACCESS_TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# Email Configuration (Gmail)
# IMPORTANT: Use App Password if you have 2FA enabled on Gmail
# Generate App Password: https://support.google.com/accounts/answer/185833
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-app-password-here
EMAILID=your-gmail@gmail.com
PASSWORD=your-app-password-here

# Server Configuration
PORT=8000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Maintenance Mode
MAINTENANCE_MODE=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# WebRTC Configuration
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_SERVERS=

# Analytics Configuration
ANALYTICS_ENABLED=false
ANALYTICS_KEY=

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password

# Security Configuration
BCRYPT_ROUNDS=10
OTP_EXPIRY_MINUTES=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (if using Redis for sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/api/docs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_PATH=./backups

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false
